<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<div class="offset-2 col-8">
    <div id="homeContent" class="container cn mb-5">
        <form id="form" action="/UserLogin/Login" method="post" onsubmit="return false" class="">
            <div class="row pt-3">
                <div class="col-12">
                    <h4 class="postTitle mb-2">登入帳戶</h4>
                </div>
                <div class="col-12 mb-3">
                    <label for="LoginName" class="form-label">帳號</label>
                    <input type="text" class="form-control" v-bind:class="{'is-invalid':AccountValid}"
                           id="LoginName" name="LoginName" v-model="Account" placeholder="">
                    <div class="invalid-feedback">
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <label for="LoginPwd" class="form-label">密碼</label>
                    <input type="password" class="form-control" v-bind:class="{'is-invalid':PasswordValid}"
                           id="LoginPwd" name="LoginPwd" v-model="Password" placeholder="">
                    <div class="invalid-feedback">
                    </div>
                    <div class="text-danger" id="errormsg"></div>
                </div>

                
                <div class="col-12 text-center">
                    <a asp-controller="UserLogin" asp-action="forgetPassword">忘記密碼</a>
                    <button class="postBtn w-25 mt-4" type="submit" v-on:click="sub">登入</button>
                </div>
                
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        var vm = new Vue({
            el: "#homeContent",
            data:
            {
                Account: "",
                Password: "",
            },
            methods:
            {
                sub: function() {
                    var self = this;
                    var data =
                    {
                        LoginName: this.Account,
                        LoginPwd: this.Password,
                    };
                    console.log(data);

                    fetch(`/api/Confirm/ConfirmLogin`, {
                        method: 'POST',
                        headers:
                        {
                            'Accept': 'application/json',
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    })
                        .then(function(response) {
                            return response.json();
                        })
                        .then(function(res) {
                            console.log("m = ", res);
                            $('#errormsg').text(res.accMessage);
                            if (res.message == null) {
                                $("#form").attr("onsubmit", "retrun true");
                                $("#form").submit();
                                //self.success();
                                console.log("ok");
                            }
                        })
                        .catch(function(res) {
                            console.log("err = ", res);
                        });
                },
                success:function()
                {
                    swal("登入成功!", "點擊確認或3秒後導向登入畫面", "success", {button: "確認", timer: 3000})
                    .then((value) => {
                    location.href = "/Home/Index";});
                }
            },
            computed:
            {
                AccountValid: function() {
                    return this.Account.length > 0 ? false : true;
                },
                PasswordValid: function() {
                    return this.Password.length > 0 ? false : true;
                }
            }
        });
    </script>
}
