 <section id="postCase">
        <div class="container mb-5">
            <form id="caseForm" action="@Url.Action("AddCase","Case")" method="post" class="needs-validation"
            novalidate="" enctype="multipart/form-data">
                <div class="row pt-3">
                    <div class="col-12">
                        <h4 class="postTitle mb-2">新增貼文</h4>
                        <h6>說明</h6>
                        <label for="CaseTitle" class="form-label">標題</label>
                        <input type="text" class="form-control" id="CaseTitle" name="CaseTitle" placeholder="請輸入標題" required>
                        <div class="invalid-feedback">
                            此欄位不可為空
                        </div>
                    </div>

                    <div class="col-md-5 mb-2">
                        <label for="CaseNeedHelp" class="form-label">貼文分類</label>
                        <select class="form-select" id="CaseNeedHelp" required>
                            <option disabled>請選擇</option>
                            <option value=true>需要幫助</option>
                            <option value=false>提供技能</option>
                        </select>
                        <div class="invalid-feedback">
                            此欄位不可為空
                        </div>
                    </div>
                    <div class="col-md-7">
                        <label for="CaseSkilId" class="form-label">內容</label>
                        <select class="form-select" id="CaseSkilId" name="CaseSkilId" required>
                            <option disabled>請選擇</option>
                            <option v-for="item in skillTags" v-bind:value="item.skillId">{{item.skillName}}</option>
                        </select>
                        <div class="invalid-feedback">
                            此欄位不可為空
                        </div>
                    </div>


                    <div class="col-12 mb-3 mt-3">
                        <label for="CaseIntroduction" class="form-label">說明</label>
                        <textarea class="form-control" id="CaseIntroduction" name="CaseIntroduction" cols="30" rows="5"
                              placeholder="此欄位不可為空" required></textarea>
                        <div class="invalid-feedback">
                            此欄位不可為空
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="CasePhoto" class="form-label">圖片(大小請勿超過2MB)</label>
                        <input type="file" class="form-control" id="CasePhoto" name="CasePhoto" onchange="previewPic(this)"
                           accept="image/*" required>
                        <img id="pic" >
                        <div class="invalid-feedback">
                            此欄位不可為空
                        </div>

                    </div>
                    <hr class="my-4">

                    <h6>地區</h6>
                    <div class="col-md-7 mb-2">
                        <label for="AreaCity" class="form-label">縣市</label>
                        <select class="form-select" id="AreaCity" v-on:change="getAreaTown" required >
                            <option disabled >請選擇</option>
                            <option v-for="item in areaCity" v-bind:value="item">{{item}}</option>
                        </select>
                        <div class="invalid-feedback">
                            此欄位不可為空
                        </div>
                    </div>

                    <div class="col-md-5 mb-2">
                        <label for="CaseSerArea" class="form-label">鄉鎮區</label>
                        <select class="form-select" id="CaseSerArea" name="CaseSerArea" required>
                            <option disabled v-show="isAreaSelected">請先選擇縣市</option>
                            <option v-for="item in areaTown" v-bind:value="item.areaId">{{item.areaTown}}</option>
                        </select>
                        <div class="invalid-feedback">
                            此欄位不可為空
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="CaseSerDate" class="form-label">時間</label>
                        <input type="text" class="form-control" id="CaseSerDate" name="CaseSerDate" placeholder="請輸入時間"
                           required>
                        <div class="invalid-feedback">
                            此欄位不可為空
                        </div>
                    </div>
                    <hr class="my-4">

                    <h6>發佈時間</h6>
                    <div class="col-12">
                        <input type="radio" name="postTime" id="timeNow" onchange="disableDate()" checked>
                        <label for="timeNow">立即發佈</label>
                        <br>
                        <input type="radio" name="postTime" id="timeAppointment" onchange="ableDate()">
                        <label for="timeAppointment">預約發佈</label>
                        <br>
                        <input type="date" name="" id="dateApp" onmouseout="updateDateRemind()">
                        <input type="time" name="" id="timeApp">
                    </div>
                    <p id="dateP">貼文自動下架時間為 <span id="dateRemind"></span></p>

                    <div class="col-12 text-center">
                        <button class="postBtn w-25 mt-4" type="submit" >送出</button>
                    </div>
            </form>
        </div>
    </section>
