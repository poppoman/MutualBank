    @User.Identity.Name
    <li><a asp-controller="UserLogin" asp-action="Register"><i class="fa-solid fa-circle-user"></i>&nbsp;註冊</a></li>
    <li><a asp-controller="UserLogin" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i>&nbsp;登入</a></li>
